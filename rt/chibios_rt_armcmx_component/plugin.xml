<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<!-- All SPC5 Component extension shall have the namespace "com.st.tools.spc5"-->
   <extension
         id="org.chibios.spc5.components.kernel.rt"
         name="ChibiOS-RT for ARM V7M Component"
         point="com.st.tools.spc5.extension.v1">
      <component
            headerName="ch.h"
            hidden="true"
            initFunction="chSysInit"
            icon="rsc/chibios.ico"
            isPlatform="false">
            <description>
                ChibiOS/RT for ARM Cortex-M (V7M).
            </description>
            <categories>
               <category
                     id="ChibiOS/RT">
               </category>
            </categories>
            <configuration>
               <description>
                  Portable Kernel options and settings.
               </description>
               <image
                     align="left"
                     file="rsc/chibios48x48.png">
                  <text>
                     ChibiOS/RT is GPL3-licensed free software.
                  </text>
               </image>
               <group
                     columns="1"
                     expanded="false"
                     name="Kernel Options"
                     style="collapsable">
                  <description>
                     Miscellaneous kernel parameters.
                  </description>
                  <property
                        brief="Kernel parameter CH_FREQUENCY"
                        default="1000"
                        editable="true"
                        name="System Tick Clock Frequency"
                        required="true"
                        type="unsigned">
                  </property>
                  <property
                        brief="Kernel parameter CH_TIME_QUANTUM"
                        default="20"
                        editable="true"
                        name="Time Quantum"
                        required="true"
                        type="unsigned">
                  </property>
                  <property
                        brief="Kernel parameter CH_MEMCORE_SIZE, if set to zero then all the available RAM is used"
                        default="0"
                        editable="true"
                        name="Memory Core Size"
                        required="true"
                        type="unsigned">
                  </property>
                  <property
                        brief="Kernel parameter CH_NO_IDLE_THREAD"
                        default="false"
                        editable="true"
                        name="No Internal Idle Thread"
                        required="true"
                        type="boolean">
                  </property>
               </group>
               <group
                     columns="1"
                     expanded="false"
                     name="Performance Options"
                     style="collapsable">
                  <description>
                     Options regarding performance.
                  </description>
                  <property
                        brief="Kernel option CH_OPTIMIZE_SPEED"
                        default="true"
                        editable="true"
                        name="Optimize for Speed"
                        required="true"
                        type="boolean">
                  </property>
               </group>
               <group
                     columns="1"
                     expanded="false"
                     name="Subsystem Options"
                     style="collapsable">
                  <description>
                     Options for enabling or disabling the various subsystems.
                  </description>
                  <property
                        brief="Kernel option CH_USE_REGISTRY"
                        default="true"
                        editable="true"
                        name="Use Registry"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_WAITEXIT"
                        default="true"
                        editable="true"
                        name="Use Wait/Exit"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_SEMAPHORES"
                        default="true"
                        editable="true"
                        name="Use Semaphores"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_SEMAPHORES_PRIORITY"
                        default="false"
                        editable="true"
                        name="Use Semaphores Priority"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_SEMSW"
                        default="true"
                        editable="true"
                        name="Use Semaphores Atomic Wait/Signal"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MUTEXES"
                        default="true"
                        editable="true"
                        name="Use Mutexes"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_CONDVARS"
                        default="true"
                        editable="true"
                        name="Use Condition Variables"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_CONDVARS_TIMEOUT"
                        default="true"
                        editable="true"
                        name="Use Condition Variables with Timeout"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_EVENTS"
                        default="true"
                        editable="true"
                        name="Use Events"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_EVENTS_TIMEOUT"
                        default="true"
                        editable="true"
                        name="Use Events with Timeout"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MESSAGES"
                        default="true"
                        editable="true"
                        name="Use Messages"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MESSAGES_PRIORITY"
                        default="false"
                        editable="true"
                        name="Use Messages Priority"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MAILBOXES"
                        default="true"
                        editable="true"
                        name="Use Mailboxes"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_QUEUES"
                        default="true"
                        editable="true"
                        name="Use Queues"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MEMCORE"
                        default="true"
                        editable="true"
                        name="Use Memory Core Allocator"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_HEAP"
                        default="true"
                        editable="true"
                        name="Use Heap Allocator"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MALLOC_HEAP"
                        default="false"
                        editable="true"
                        name="Use malloc for Heap"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_MEMPOOLS"
                        default="true"
                        editable="true"
                        name="Use Memory Pools Allocator"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_USE_DYNAMIC"
                        default="true"
                        editable="true"
                        name="Use Dynamic Extensions"
                        required="true"
                        type="boolean">
                  </property>
               </group>
               <group
                     columns="1"
                     expanded="false"
                     name="Debug Options"
                     style="collapsable">
                  <description>
                     Debug-related options.
                  </description>
                  <property
                        brief="Kernel option CH_DBG_SYSTEM_STATE_CHECK"
                        default="false"
                        editable="true"
                        name="Enable System State Checker"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_DBG_ENABLE_CHECKS"
                        default="false"
                        editable="true"
                        name="Enable Function Parameters Checks"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_DBG_ENABLE_ASSERTS"
                        default="false"
                        editable="true"
                        name="Enable Assertions"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_DBG_ENABLE_TRACE"
                        default="false"
                        editable="true"
                        name="Enable Trace Buffer"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_DBG_ENABLE_STACK_CHECK"
                        default="false"
                        editable="true"
                        name="Enable Stack Check"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_DBG_FILL_THREADS"
                        default="false"
                        editable="true"
                        name="Enable Fill Threads"
                        required="true"
                        type="boolean">
                  </property>
                  <property
                        brief="Kernel option CH_DBG_THREADS_PROFILING"
                        default="true"
                        editable="true"
                        name="Enable Threads Profiling"
                        required="true"
                        type="boolean">
                  </property>
               </group>
               <group
                     columns="1"
                     expanded="false"
                     name="Hooks"
                     style="collapsable">
                  <description>
                     The kernel functionality can be extended by using the hooks mechanisms. Hooks allow to insert user-defined code in specific kernel code paths. Note that hook code is inserted into a macro definition so lines must be terminated by a \.
                  </description>
                  <property
                        brief="This code is hooked into the THREAD_EXT_FIELDS macro"
                        editable="true"
                        name="Thread Extra Fields Hook"
                        required="false"
                        type="formatted">
                  </property>
                  <property
                        brief="This code is hooked into the THREAD_EXT_INIT_HOOK macro"
                        editable="true"
                        name="Thread Initialization Hook"
                        required="false"
                        type="formatted">
                  </property>
                  <property
                        brief="This code is hooked into the THREAD_EXT_EXIT_HOOK macro"
                        editable="true"
                        name="Thread Finalization Hook"
                        required="false"
                        type="formatted">
                  </property>
                  <property
                        brief="This code is hooked into the THREAD_CONTEXT_SWITCH_HOOK macro"
                        editable="true"
                        name="Thread Context Switch Hook"
                        required="false"
                        type="formatted">
                  </property>
                  <property
                        brief="This code is hooked into the IDLE_LOOP_HOOK macro"
                        editable="true"
                        name="Idle Loop Hook"
                        required="false"
                        type="formatted">
                  </property>
                  <property
                        brief="This code is hooked into the SYSTEM_TICK_EVENT_HOOK macro"
                        editable="true"
                        name="System Tick Hook"
                        required="false"
                        type="formatted">
                  </property>
                  <property
                        brief="This code is hooked into the SYSTEM_HALT_HOOK macro"
                        editable="true"
                        name="System Halt Hook"
                        required="false"
                        type="formatted">
                  </property>
               </group>
           </configuration>
            <exportedFeatures>
               <exportedFeature
                     brief="ChibiOS/RT kernel API interface"
                     exclusive="false"
                     id="org.chibios.spc5.features.kernel">
               </exportedFeature>
               <exportedFeature
                     brief="ChibiOS/RT kernel configuration interface"
                     exclusive="false"
                     id="org.chibios.spc5.features.kernel.configuration">
               </exportedFeature>
            </exportedFeatures>
            <requiredFeatures>
               <requiredFeature
                     id="org.chibios.spc5.features.kernel.port">
               </requiredFeature>
            </requiredFeatures>
      </component>
   </extension>

</plugin>
